<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="snowy"
            android:width="56dp"
            android:height="48dp"
            android:viewportWidth="56"
            android:viewportHeight="48">
            <path
                android:name="cloud"
                android:fillColor="#57a0ee"
                android:pathData="M 43.7 22.4 C 43.7 17.8 40 14.2 35.5 14.2 C 34.5 14.2 33.6 14.4 32.7 14.7 C 32.4 11.3 29.6 8.5 26.1 8.5 C 22.4 8.5 19.4 11.5 19.4 15.2 C 19.4 16 19.6 16.8 19.8 17.5 C 19.5 17.4 19.1 17.4 18.8 17.4 C 15.1 17.4 12.1 20.4 12.1 24.1 C 12.1 27.7 15 30.7 18.6 30.8 L 35.8 30.8 C 40.2 30.3 43.7 26.8 43.7 22.4 Z"
                android:strokeWidth="1"
                android:strokeColor="#ffffff" />
            <group android:name="group">
                <path
                    android:name="snowflake"
                    android:fillColor="#000"
                    android:pathData="M 27 32.5 L 27 37.5 M 28.768 33.232 L 25.232 36.768 M 29.5 35 L 24.5 35 M 28.768 36.768 L 25.232 33.232"
                    android:strokeWidth="1"
                    android:strokeColor="#57a0ee" />
            </group>
            <group android:name="group2">
                <path
                    android:name="snowflake2"
                    android:fillColor="#000"
                    android:pathData="
                    M 25 32.5 L 25 37.5
                    M 26.768 33.232 L 23.232 36.768
                    M 27.5 35 L 22.5 35
                    M 26.768 36.768 L 23.232 33.232"
                    android:strokeWidth="1"
                    android:strokeColor="#57a0ee" />
            </group>
        </vector>
    </aapt:attr>
    <target android:name="group">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:duration="500"
                    android:interpolator="@android:interpolator/linear"
                    android:propertyName="translateX"
                    android:repeatCount="infinite"
                    android:repeatMode="reverse"
                    android:valueFrom="2"
                    android:valueTo="4"
                    android:valueType="floatType" />
                <objectAnimator
                    android:duration="700"
                    android:interpolator="@android:interpolator/linear"
                    android:propertyName="translateY"
                    android:repeatCount="infinite"
                    android:repeatMode="restart"
                    android:valueFrom="-8"
                    android:valueTo="6"
                    android:valueType="floatType" />
            </set>
        </aapt:attr>
    </target>
    <target android:name="snowflake">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="700"
                android:interpolator="@android:interpolator/linear"
                android:propertyName="strokeAlpha"
                android:repeatCount="infinite"
                android:repeatMode="restart"
                android:valueFrom="1"
                android:valueTo="0.1"
                android:valueType="floatType" />
        </aapt:attr>
    </target>
    <target android:name="group2">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:duration="700"
                    android:interpolator="@android:interpolator/linear"
                    android:propertyName="translateX"
                    android:repeatCount="infinite"
                    android:repeatMode="reverse"
                    android:valueFrom="-4"
                    android:valueTo="-3"
                    android:valueType="floatType" />
                <objectAnimator
                    android:duration="700"
                    android:interpolator="@android:interpolator/linear"
                    android:propertyName="translateY"
                    android:repeatCount="infinite"
                    android:repeatMode="restart"
                    android:valueFrom="-10"
                    android:valueTo="4"
                    android:valueType="floatType" />
            </set>
        </aapt:attr>
    </target>
    <target android:name="snowflake2">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="700"
                android:interpolator="@android:interpolator/linear"
                android:propertyName="strokeAlpha"
                android:repeatCount="infinite"
                android:repeatMode="restart"
                android:valueFrom="1"
                android:valueTo="0.1"
                android:valueType="floatType" />
        </aapt:attr>
    </target>
</animated-vector>
