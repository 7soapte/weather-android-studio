    <target android:name="sun_container">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:duration="0"
                    android:interpolator="@android:interpolator/linear"
                    android:propertyName="translateY"
                    android:valueFrom="0"
                    android:valueTo="10"
                    android:valueType="floatType" />
            </set>
        </aapt:attr>
    </target>
    <target android:name="sun_container">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:duration="0"
                    android:interpolator="@android:interpolator/linear"
                    android:propertyName="translateX"
                    android:valueFrom="0"
                    android:valueTo="6"
                    android:valueType="floatType" />
            </set>
        </aapt:attr>
    </target>
    <target android:name="rays">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:duration="5000"
                    android:interpolator="@android:interpolator/linear"
                    android:propertyName="rotation"
                    android:repeatCount="infinite"
                    android:repeatMode="restart"
                    android:valueFrom="0"
                    android:valueTo="180"
                    android:valueType="floatType" />
                <objectAnimator
                    android:duration="1"
                    android:interpolator="@android:interpolator/linear"
                    android:propertyName="pivotX"
                    android:valueFrom="16"
                    android:valueTo="16"
                    android:valueType="floatType" />
                <objectAnimator
                    android:duration="1"
                    android:interpolator="@android:interpolator/linear"
                    android:propertyName="pivotY"
                    android:valueFrom="14"
                    android:valueTo="14"
                    android:valueType="floatType" />
            </set>
        </aapt:attr>
    </target>
