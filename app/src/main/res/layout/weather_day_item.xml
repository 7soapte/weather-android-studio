<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/parent">

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">


            <TextView
                android:id="@+id/futureDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Day"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/recyclerImg"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_below="@+id/futureDay"
                android:layout_centerHorizontal="true"
                android:contentDescription="Weather description image" />

            <TextView
                android:id="@+id/futureMinMax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recyclerImg"
                android:layout_marginTop="10dp"
                android:text="min C max C"
                android:textAlignment="center" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>